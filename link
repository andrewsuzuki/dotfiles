#!/bin/bash

if [[ `uname` == 'Darwin' ]]
then
    # The flag for dereferencing symlinks is
    # different on OS X (-h)

    ln -sfFh ~/.dotfiles/config ~/.config
    ln -sfFh ~/.dotfiles/i3 ~/.i3
else
    ln -sfFn ~/.dotfiles/i3 ~/.i3
fi

ln -sf ~/.dotfiles/zsh/init.sh ~/.zshrc
ln -sf ~/.dotfiles/gitconfig ~/.gitconfig
ln -sf ~/.dotfiles/tmux/tmux.conf ~/.tmux.conf
ln -sf ~/.dotfiles/tmux/tmuxline-snapshot ~/.tmuxline-snapshot
