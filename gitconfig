[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[user]
	name = Andrew Suzuki
	email = andrew.b.suzuki@gmail.com
[push]
	default = simple
[core]
    editor = vim
	ignorecase = false
[alias]
    ### Add
    a = add --all
    ### Checkout
    ch = checkout
    chb = checkout -b
    ### Commit
    c = commit
    cm = commit --message
    ### Diff
    d = diff
    dj = "!git diff --color $@ | diff-so-fancy | less"
    dc = diff --cached
    dcj = "!git diff --cached --color $@ | diff-so-fancy | less"
    ### Log
    l = log
    ### Merge
    m = merge
    ### Status
    s = status
    ### Push
    ps = push
