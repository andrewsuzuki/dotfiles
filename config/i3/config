# i3 config file (v4)
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

# Modifier keys
set $mod Mod4
set $hyper Mod5

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Focus should not follow mouse
focus_follows_mouse no

# Terminal
set $term termite

# #---Primary Bindings---# #

# Start URxvt
bindsym $mod+Return exec --no-startup-id $term
# Start URxvt in same directory as current
#bindsym $mod+Shift+Return exec --no-startup-id "$HOME/scripts/misc/term-samedir.sh"
bindsym $mod+Shift+Return exec $term -d "$(xcwd)"

# Change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle
# Toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# Autorandr autodetect / load profile
bindsym $mod+Shift+a exec --no-startup-id "$HOME/scripts/keys/autorandr-conditional-load.sh"

# Start Chrome Browser (see also: incognito mod+Shift+i)
bindsym $mod+b exec google-chrome-stable

# Start/focus VSCode
bindsym $mod+Shift+c exec --no-startup-id "$HOME/scripts/keys/run-focus.sh code-oss code-oss [class\=code-oss] 2"

# Start Rofi
bindsym $mod+d exec --no-startup-id "rofi -show drun"
# Start file manager (Dolphin for now)
#bindsym $mod+Shift+d exec --no-startup-id "$term -e ranger"
bindsym $mod+Shift+d exec pcmanfm

# Toggle container split layout
bindsym $mod+e layout toggle split
# Exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# Enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle
# fzf (fuzzy finder) via `fo` sh function
bindsym $mod+Shift+f exec --no-startup-id "$term -e 'zsh -ic fo'"

# Previous workspace
bindsym $mod+g workspace prev
# Move focused window to prev workspace, then follow it
bindsym $mod+Shift+g exec "i3-msg move to workspace prev && i3-msg workspace prev"

# Change focus left
bindsym $mod+h focus left
# Move focused window left
bindsym $mod+Shift+h move left

# Next workspace
bindsym $mod+i workspace next
# Move focused window to next workspace, then follow it
bindsym $mod+Shift+i exec "i3-msg move to workspace next && i3-msg workspace next"

# Change focus down
bindsym $mod+j focus down
# Move focused window down
bindsym $mod+Shift+j move down

# Change focus up
bindsym $mod+k focus up
# Move focused window up
bindsym $mod+Shift+k move up

# Change focus right
bindsym $mod+l focus right
# Move focused window right
bindsym $mod+Shift+l move right

# Start/focus Gmail
bindsym $mod+Shift+m exec --no-startup-id "$HOME/scripts/keys/run-focus.sh crx_kmhopmchchfpfdcdjodmpfaaphdclmlj chrome-kmhopmchchfpfdcdjodmpfaaphdclmlj-Default [instance\=crx_kmhopmchchfpfdcdjodmpfaaphdclmlj] 1"

# Start/focus NixNote2
bindsym $mod+Shift+n exec "$HOME/scripts/keys/run-focus.sh nixnote2 nixnote2 [class\=nixnote2] 1"

# Toggle Polybar visibility
bindsym $mod+p exec --no-startup-id polybar-msg cmd toggle
# Start private browser (Chrome Incognito)
bindsym $mod+Shift+p exec google-chrome-stable --incognito

# Kill focused window
bindsym $mod+q kill

# Resize mode
bindsym $mod+r mode "resize"
# Restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# TESTING switch to tabbed layout
bindsym $mod+s layout tabbed
# Start/focus Spotify
bindsym $mod+Shift+s exec --no-startup-id "$HOME/scripts/keys/run-focus.sh spotify spotify [class\=Spotify] 1"

# Toggle split direction
bindsym $mod+t split toggle
# Start/focus Todoist
bindsym $mod+Shift+t exec --no-startup-id "$HOME/scripts/keys/run-focus.sh todoist.com__app todoist-chrome-app [instance\=todoist.com__app] 1.5"

# Start networkmanager_dmenu (in rofi)
bindsym $mod+w exec networkmanager_dmenu
# Rescan wifi
bindsym $mod+Shift+w exec --no-startup-id "nmcli device wifi rescan"

# #---Workspaces---# #

# Names
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8: email"
set $ws9 "9: todos"
set $ws10 "10: music"

# Workspace assignments
# https://i3wm.org/docs/userguide.html#assign_workspace
#assign [class="chrome"] $ws1
#assign [class="code-oss"] $ws3
for_window [instance="crx_kmhopmchchfpfdcdjodmpfaaphdclmlj"] move to workspace $ws8
for_window [instance="todoist.com__app"] move to workspace $ws9
for_window [class="Spotify"] move to workspace $ws10

# Switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# #---Resize Mode---# #

mode "resize" {
        bindsym h resize shrink width 50 px or 10 ppt
        bindsym k resize grow height 50 px or 10 ppt
        bindsym j resize shrink height 50 px or 10 ppt
        bindsym l resize grow width 50 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

# #---Color/Style---# #

# Color Variables
set $white #ffffff
set $black #000000
#set $teal #008080
set $teal #EA85CF
set $gray #c0c0c0
set $blue #00007f
set $red #f0696f

# Frame window colors
# Class                     border backgr   text   indicator child_border
client.focused		    $teal  $teal   $white  #56606f   #56606f
client.focused_inactive     $white #384254 $black  #d2d2d2   #384254
client.unfocused            $gray  $gray   $black  #d2d2d2   #5A5C5F
client.urgent   	    $red   $red    #121212 #d2d2d2   #984141
client.placeholder          $white #64FFDA #121212 #d2d2d2   #64FFDA
client.background           #d2d2d2

# Font for window titles / i3bar default
font pango:Noto Sans Mono Regular 6

# Border
default_border normal 0

# # Gaps
# gaps inner 10
# # fix weird background bug with gaps?
# for_window [class=".*"] border pixel 0
# hide_edge_borders both

# #---Bar---# #

# Polybar
exec_always --no-startup-id $HOME/scripts/polybar/launch.sh

